            <!-- Status History -->
            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card detail-card">
                  <div class="card-body">
                    <h4 class="detail-card-title">
                      <i class="mdi mdi-history me-2"></i>
                      Historique des Statuts
