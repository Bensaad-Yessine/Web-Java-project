                            <button type="button" class="btn btn-secondary" disabled>
                              <i class="mdi mdi-lock-outline me-2"></i>
                              Actions terminées
                            </button>
                          {% endif %}
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
