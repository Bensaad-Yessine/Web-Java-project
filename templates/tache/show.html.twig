                          {% if tache.statut == 'En cours' or tache.statut == 'EN_COURS' or tache.statut == 'PAUSED' %}
                            <button type="submit" name="action" value="TERMINE" class="btn btn-primary mb-2">
                              <i class="mdi mdi-check-circle-outline me-2"></i>
                              Terminer
                            </button>
                          {% endif %}
                          
