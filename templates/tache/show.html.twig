                          <tr>
                            <th style="width: 15%">
                              <i class="mdi mdi-calendar-clock me-1"></i>
                              Date
                            </th>
                            <th style="width: 20%">
                              <i class="mdi mdi-arrow-left-circle me-1"></i>
                              Ancien statut
                            </th>
                            <th style="width: 20%">
                              <i class="mdi mdi-arrow-right-circle me-1"></i>
                              Nouveau statut
                            </th>
