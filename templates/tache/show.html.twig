{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
    <h1>Tache</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tache.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tache.titre }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ tache.type }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ tache.dateDebut ? tache.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ tache.dateFin ? tache.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DureeEstimee</th>
                <td>{{ tache.dureeEstimee }}</td>
            </tr>
            <tr>
                <th>Priorite</th>
                <td>{{ tache.priorite }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ tache.statut }}</td>
            </tr>
            <tr>
                <th>Origine</th>
                <td>{{ tache.origine }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_tache_index') }}">back to list</a>

    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">edit</a>

    {{ include('tache/_delete_form.html.twig') }}
{% endblock %}
