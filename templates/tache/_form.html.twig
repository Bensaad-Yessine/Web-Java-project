{{ form_start(form, {'attr': {'class': 'form-container'}}) }}

    {% for field in form %}
        <div class="form-group">
            {{ form_label(field) }}
            {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(field) }}
        </div>
    {% endfor %}

    <button type="submit" class="btn-primary">
        {{ button_label|default('Enregistrer') }}
    </button>

{{ form_end(form) }}
