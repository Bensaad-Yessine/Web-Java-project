{% block title %}Modifier la Tâche{% endblock %}
{% block body %}
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ESPRIT - Modification de Tâche</title>
    <!-- plugins:css -->
