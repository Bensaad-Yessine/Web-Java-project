{% extends 'base.html.twig' %}

{% block title %}Tache index{% endblock %}

{% block body %}
    <h1>Tache index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>DureeEstimee</th>
                <th>Priorite</th>
                <th>Statut</th>
                <th>Origine</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
                <td>{{ tache.id }}</td>
                <td>{{ tache.titre }}</td>
                <td>{{ tache.type }}</td>
                <td>{{ tache.dateDebut ? tache.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dateFin ? tache.dateFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tache.dureeEstimee }}</td>
                <td>{{ tache.priorite }}</td>
                <td>{{ tache.statut }}</td>
                <td>{{ tache.origine }}</td>
                <td>
                    <a href="{{ path('app_tache_show', {'id': tache.id}) }}">show</a>
                    <a href="{{ path('app_tache_edit', {'id': tache.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tache_new') }}">Create new</a>
{% endblock %}
