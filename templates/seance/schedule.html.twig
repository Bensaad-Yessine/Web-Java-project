            });
        }

        if (nextBtn) {
            nextBtn.addEventListener('click', function() {
                console.log('Semaine suivante');
            });
        }

        if (todayBtn) {
            todayBtn.addEventListener('click', function() {
                console.log('Semaine actuelle');
            });
        }
    });
</script>

