<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-focus sur le premier champ
        const firstInput = document.querySelector('input[autofocus]');
        if (firstInput) {
            firstInput.focus();
        }
        
        // Validation basique
        const formInputs = document.querySelectorAll('.form-control-custom');
        formInputs.forEach(input => {
            input.addEventListener('blur', function() {
                validateField(this);
            });
        });
        
        function validateField(field) {
            field.classList.remove('is-valid', 'is-invalid');
            if (field.value.trim() === '') {
                field.classList.add('is-invalid');
            } else {
                field.classList.add('is-valid');
            }
        }
        
        // Confirmation avant annulation
        const cancelBtn = document.querySelector('a[href*="app_matiere_classe_index"]');
        if (cancelBtn) {
            cancelBtn.addEventListener('click', function(e) {
                const inputs = document.querySelectorAll('.form-control-custom');
                const hasValue = Array.from(inputs).some(input => {
                    // Vérifier si la valeur a changé par rapport à l'original
                    const originalValue = this.getAttribute('data-original') || '';
                    return input.value.trim() !== originalValue.trim();
                });
                
                if (hasValue && !confirm('Les modifications non sauvegardées seront perdues. Continuer ?')) {
                    e.preventDefault();
                }
            });
        }
        
        // Feedback lors de la soumission
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function() {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Enregistrement...';
                    submitBtn.disabled = true;
                }
            });
        }
        
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const closeBtn = alert.querySelector('.btn-close');
                if (closeBtn) closeBtn.click();
            });
        }, 5000);
        
        // Stocker les valeurs originales pour la comparaison
        document.querySelectorAll('.form-control-custom').forEach(input => {
            input.setAttribute('data-original', input.value);
        });
    });
</script>
