{# templates/objectif/edit.html.twig #}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin - Modifier Objectif</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="{{ asset('assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/ti-icons/css/themify-icons.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/css/vendor.bundle.base.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/vendors/font-awesome/css/font-awesome.min.css') }}">
    <!-- Layout styles -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}" />
  </head>

  <body>
    <div class="container-scroller">

      <!-- SIDEBAR -->
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
          <a class="sidebar-brand brand-logo" href="#">
            <img src="{{ asset('assets/images/logo.svg') }}" alt="logo" />
          </a>
          <a class="sidebar-brand brand-logo-mini" href="#">
            <img src="{{ asset('assets/images/logo-mini.svg') }}" alt="logo" />
          </a>
        </div>

        <ul class="nav">
          <li class="nav-item nav-category">
            <span class="nav-link">Navigation</span>
          </li>

          <li class="nav-item menu-items active">
            <a class="nav-link" href="{{ path('app_objectif_index') }}">
              <span class="menu-icon"><i class="mdi mdi-target"></i></span>
              <span class="menu-title">Objectifs</span>
            </a>
          </li>

          <li class="nav-item menu-items">
            <a class="nav-link" href="{{ path('app_suivi_bien_etre_index') }}">
              <span class="menu-icon"><i class="mdi mdi-heart-pulse"></i></span>
              <span class="menu-title">Suivi Bien-être</span>
            </a>
          </li>
        </ul>
      </nav>

      <!-- PAGE -->
      <div class="container-fluid page-body-wrapper">

        <!-- NAVBAR -->
        <nav class="navbar p-0 fixed-top d-flex flex-row">
          <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
              <span class="mdi mdi-menu"></span>
            </button>
          </div>
        </nav>

        <!-- MAIN PANEL -->
        <div class="main-panel">
          <div class="content-wrapper">

            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">

                    {# Flash messages #}
                    {% for label, messages in app.flashes %}
                      {% for message in messages %}
                        <div class="alert alert-{{ label }} mb-3">
                          {{ message }}
                        </div>
                      {% endfor %}
                    {% endfor %}

                    <div class="d-flex justify-content-between align-items-center mb-4">
                      <h4 class="card-title">✏️ Modifier un objectif</h4>
                      <a href="{{ path('app_objectif_index') }}" class="btn btn-secondary btn-icon-text">
                        <i class="mdi mdi-arrow-left"></i>
                        Retour
                      </a>
                    </div>

                    {{ form_start(form) }}

                    <div class="row">
                      <div class="col-md-6 mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class':'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                      </div>

                      <div class="col-md-6 mb-3">
                        {{ form_label(form.type) }}
                        {{ form_widget(form.type, {'attr': {'class':'form-select'}}) }}
                        {{ form_errors(form.type) }}
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-4 mb-3">
                        {{ form_label(form.valeurCible) }}
                        {{ form_widget(form.valeurCible, {'attr': {'class':'form-control', 'min': 0, 'max': 24}}) }}
                        {{ form_errors(form.valeurCible) }}
                        <small class="text-muted">
                          Sommeil: 1-24 | Stress/Alimentation: 0-10 | Sport: >= 0
                        </small>
                      </div>

                      <div class="col-md-4 mb-3">
                        {{ form_label(form.dateDebut) }}
                        {{ form_widget(form.dateDebut, {'attr': {'class':'form-control'}}) }}
                        {{ form_errors(form.dateDebut) }}
                      </div>

                      <div class="col-md-4 mb-3">
                        {{ form_label(form.dateFin) }}
                        {{ form_widget(form.dateFin, {'attr': {'class':'form-control'}}) }}
                        {{ form_errors(form.dateFin) }}
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-6 mb-3">
                        {{ form_label(form.priorite) }}
                        {{ form_widget(form.priorite, {'attr': {'class':'form-select'}}) }}
                        {{ form_errors(form.priorite) }}
                      </div>

                      <div class="col-md-6 mb-3">
                        {{ form_label(form.statut) }}
                        {{ form_widget(form.statut, {'attr': {'class':'form-select'}}) }}
                        {{ form_errors(form.statut) }}
                      </div>
                    </div>

                    {# Si tu as mis "progression" dans le FormType, décommente ceci #}
                    {#
                    <div class="mb-3">
                      {{ form_label(form.progression) }}
                      {{ form_widget(form.progression, {'attr': {'class':'form-control', 'min': 0, 'max': 100}}) }}
                      {{ form_errors(form.progression) }}
                    </div>
                    #}

                    <button type="submit" class="btn btn-warning btn-icon-text">
                      <i class="mdi mdi-content-save btn-icon-prepend"></i>
                      Mettre à jour
                    </button>

                    {{ form_end(form) }}

                  </div>
                </div>
              </div>
            </div>

          </div>

          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                Copyright © 2024
              </span>
            </div>
          </footer>
        </div>
      </div>
    </div>

    <!-- scripts -->
    <script src="{{ asset('assets/vendors/js/vendor.bundle.base.js') }}"></script>
    <script src="{{ asset('assets/js/off-canvas.js') }}"></script>
    <script src="{{ asset('assets/js/misc.js') }}"></script>
  </body>
</html>
