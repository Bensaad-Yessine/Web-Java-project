<script>
  // =========================
  // 1) FILTER OBJECTIFS (AJAX)
  // =========================
  const filterType = document.getElementById('filterType');
  const objectifTbody = document.getElementById('objectifTbody');

  filterType?.addEventListener('change', async () => {
    const type = filterType.value;

    const res = await fetch(`{{ path('app_objectif_filter') }}?type=${encodeURIComponent(type)}`, {
      headers: { 'X-Requested-With': 'XMLHttpRequest' }
    });

    const data = await res.json();
    objectifTbody.innerHTML = data.html;

    // Ø¨Ø¹Ø¯ Ù…Ø§ Ù†Ø¨Ø¯Ù‘Ù„ tbody Ø¨Ø§Ù„Ù€ AJAX Ù„Ø§Ø²Ù… Ù†Ø¹Ø§ÙˆØ¯ Ù†Ø±Ø¨Ø· Events Ù…ØªØ§Ø¹ tri suivis
    bindSuiviSortEvents();
  });

  // =========================================
  // 2) TRI SUIVIS PAR DATE (PAR OBJECTIF AJAX)
  // =========================================
  function bindSuiviSortEvents() {
    document.querySelectorAll('.suivi-sort').forEach(select => {
      // avoid multiple bindings
      if (select.dataset.bound === '1') return;
      select.dataset.bound = '1';

      select.addEventListener('change', async () => {
        const objectifId = select.dataset.objectif;
        const sort = select.value;

        const tbody = document.getElementById(`suiviTbody-${objectifId}`);
        if (!tbody) return;

        // route avec id dynamique
        const base = `{{ path('app_suivi_rows_by_objectif', { idObjectif: 0 }) }}`;
        const url = base.replace('/0', `/${objectifId}`) + `?sort=${encodeURIComponent(sort)}`;

        const res = await fetch(url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
        const data = await res.json();
        tbody.innerHTML = data.html;
      });
    });
  }

  // bind au chargement initial
  bindSuiviSortEvents();
</script>

