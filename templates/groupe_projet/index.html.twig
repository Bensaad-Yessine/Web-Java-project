                <div class="stat-card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="stat-count">{{ groupe_projets|length }}</h3>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="stat-icon card-1">
                          <i class="mdi mdi-account-multiple"></i>
                        </div>
                      </div>
                    </div>
                    <h6 class="stat-label">Groupes totaux</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin">
                <div class="stat-card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="stat-count">{{ groupe_projets|filter(g => g.statut == 'Actif')|length }}</h3>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="stat-icon card-4">
                          <i class="mdi mdi-check-circle"></i>
                        </div>
                      </div>
                    </div>
                    <h6 class="stat-label">Groupes actifs</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin">
                <div class="stat-card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          <h3 class="stat-count">{{ groupe_projets|filter(g => g.statut == 'Terminé')|length }}</h3>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="stat-icon card-3">
                          <i class="mdi mdi-flag-checkered"></i>
                        </div>
                      </div>
                    </div>
                    <h6 class="stat-label">Groupes terminés</h6>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 grid-margin">
                <div class="stat-card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-9">
                        <div class="d-flex align-items-center align-self-start">
                          {% set total_members = 0 %}
                          {% for groupe in groupe_projets %}
                            {% set total_members = total_members + groupe.nbrMembre %}
                          {% endfor %}
                          <h3 class="stat-count">{{ total_members }}</h3>
                        </div>
                      </div>
                      <div class="col-3">
                        <div class="stat-icon card-2">
                          <i class="mdi mdi-account"></i>
                        </div>
                      </div>
                    </div>
                    <h6 class="stat-label">Membres totaux</h6>
                  </div>
                </div>
              </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
              <div class="row">
                <div class="col-md-8">
                  <h6 class="filter-title">Filtres de recherche</h6>
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="form-label">Statut</label>
                        <select class="form-control" id="statusFilter">
                          <option value="">Tous les statuts</option>
                          <option value="Actif">Actif</option>
                          <option value="Terminé">Terminé</option>
                          <option value="En pause">En pause</option>
                          <option value="Annulé">Annulé</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="form-label">Matière</label>
                        <input type="text" class="form-control" id="matiereFilter" placeholder="Filtrer par matière">
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label class="form-label">Tri par</label>
                        <select class="form-control" id="sortFilter">
                          <option value="nom">Nom (A-Z)</option>
                          <option value="date">Date de création</option>
                          <option value="membres">Nombre de membres</option>
                        </select>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                  <button class="btn btn-secondary me-2" id="resetFilters">
                    <i class="mdi mdi-refresh me-1"></i>
                    Réinitialiser
                  </button>
                  <button class="btn btn-primary" id="applyFilters">
                    <i class="mdi mdi-filter me-1"></i>
                    Appliquer les filtres
                  </button>
                </div>
              </div>
            </div>

            <!-- Groups Table -->
            <div class="row">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title d-flex align-items-center">
                      <div class="card-title-icon card-1 me-3">
                        <i class="mdi mdi-format-list-bulleted"></i>
                      </div>
                      Liste des Groupes
                    </h4>
                    
                    {% if groupe_projets|length > 0 %}
                      <div class="table-responsive">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th>ID</th>
                              <th>Groupe</th>
                              <th>Matière</th>
                              <th>Membres</th>
                              <th>Description</th>
                              <th>Statut</th>
                              <th>Créé le</th>
                              <th>Actions</th>
                            </tr>
                          </thead>
                          <tbody>
                            {% for groupe in groupe_projets %}
                              <tr>
                                <td>#{{ groupe.id }}</td>
                                <td>
                                  <div class="d-flex align-items-center">
                                    <div class="group-avatar me-3">
                                      GP{{ groupe.id }}
                                    </div>
                                    <div>
                                      <strong>{{ groupe.nomProjet }}</strong>
                                    </div>
                                  </div>
                                </td>
                                <td>{{ groupe.matiere }}</td>
                                <td>
                                  <span class="badge bg-primary">{{ groupe.nbrMembre }} membres</span>
                                </td>
                                <td class="description-cell" title="{{ groupe.description }}">
                                  {{ groupe.description|length > 50 ? groupe.description|slice(0, 50) ~ '...' : groupe.description }}
                                </td>
                                <td>
                                  {% if groupe.statut == 'Actif' %}
                                    <span class="badge-status badge-active">{{ groupe.statut }}</span>
                                  {% elseif groupe.statut == 'Terminé' %}
                                    <span class="badge-status badge-completed">{{ groupe.statut }}</span>
                                  {% elseif groupe.statut == 'En pause' %}
                                    <span class="badge-status badge-pending">{{ groupe.statut }}</span>
                                  {% else %}
                                    <span class="badge-status badge-inactive">{{ groupe.statut }}</span>
                                  {% endif %}
                                </td>
                                <td>
                                  {{ groupe.CreatedAt ? groupe.CreatedAt|date('d/m/Y') : 'N/A' }}
                                </td>
                                <td>
                                  <div class="action-buttons">
                                    <a href="{{ path('app_groupe_projet_show', {'id': groupe.id}) }}" 
                                       class="btn btn-view" 
                                       title="Voir détails">
                                      <i class="mdi mdi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_groupe_projet_edit', {'id': groupe.id}) }}" 
                                       class="btn btn-edit" 
                                       title="Modifier">
                                      <i class="mdi mdi-pencil"></i>
                                    </a>
                                    <form method="post" 
                                          action="{{ path('app_groupe_projet_delete', {'id': groupe.id}) }}" 
                                          class="d-inline"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce groupe ?');">
                                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ groupe.id) }}">
                                      <button type="submit" class="btn btn-delete" title="Supprimer">
                                        <i class="mdi mdi-delete"></i>
                                      </button>
                                    </form>
                                  </div>
                                </td>
                              </tr>
                            {% endfor %}
                          </tbody>
                        </table>
                      </div>
                    {% else %}
                      <div class="empty-state">
                        <i class="mdi mdi-account-multiple-off"></i>
                        <h4>Aucun groupe trouvé</h4>
                        <p>Commencez par créer votre premier groupe de projet.</p>
                        <a href="{{ path('app_groupe_projet_new') }}" class="btn btn-new mt-3">
                          <i class="mdi mdi-plus-circle me-2"></i>
                          Créer un groupe
                        </a>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>

            <!-- Footer -->
            <footer class="footer">
              <div class="d-sm-flex justify-content-center justify-content-sm-between">
                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">
                  © {{ 'now'|date('Y') }} ESPRIT École d'Ingénieurs. Tous droits réservés.
                </span>
                <span class="text-muted float-none float-sm-end d-block mt-1 mt-sm-0 text-center">
                  {{ groupe_projets|length }} groupes | 
                  {% if app.user %}
                    Connecté: {{ app.user.prenom }} {{ app.user.nom }}
                  {% endif %}
                </span>
              </div>
            </footer>
          </div>
        </div>
      </div>
    </div>

    <!-- Scripts -->
    <script src="{{ asset('assets/vendors/js/vendor.bundle.base.js') }}"></script>
    <script src="{{ asset('assets/js/off-canvas.js') }}"></script>
    <script src="{{ asset('assets/js/misc.js') }}"></script>
    
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-hide alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
        
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');
                
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }
        
        // Filter functionality
        const statusFilter = document.getElementById('statusFilter');
        const matiereFilter = document.getElementById('matiereFilter');
        const sortFilter = document.getElementById('sortFilter');
        const applyFiltersBtn = document.getElementById('applyFilters');
        const resetFiltersBtn = document.getElementById('resetFilters');
        
        if (applyFiltersBtn) {
            applyFiltersBtn.addEventListener('click', function() {
                const status = statusFilter.value;
                const matiere = matiereFilter.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');
                
                rows.forEach(row => {
                    const statusCell = row.querySelector('.badge-status');
                    const matiereCell = row.cells[2]; // Matière column
                    
                    let showRow = true;
                    
                    // Filter by status
                    if (status && statusCell) {
                        if (!statusCell.textContent.includes(status)) {
                            showRow = false;
                        }
                    }
                    
                    // Filter by matière
                    if (matiere && matiereCell) {
                        if (!matiereCell.textContent.toLowerCase().includes(matiere)) {
                            showRow = false;
                        }
                    }
                    
                    row.style.display = showRow ? '' : 'none';
                });
            });
        }
        
        if (resetFiltersBtn) {
            resetFiltersBtn.addEventListener('click', function() {
                statusFilter.value = '';
                matiereFilter.value = '';
                sortFilter.value = 'nom';
                
                const rows = document.querySelectorAll('tbody tr');
                rows.forEach(row => {
                    row.style.display = '';
                });
            });
        }
        
        // Sort functionality
        if (sortFilter) {
            sortFilter.addEventListener('change', function() {
                const sortBy = this.value;
                const tbody = document.querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));
                
                rows.sort((a, b) => {
                    let aValue, bValue;
                    
                    switch(sortBy) {
                        case 'nom':
                            aValue = a.cells[1].querySelector('strong').textContent;
                            bValue = b.cells[1].querySelector('strong').textContent;
                            return aValue.localeCompare(bValue);
                        case 'date':
                            aValue = a.cells[6].textContent;
                            bValue = b.cells[6].textContent;
                            return new Date(aValue.split('/').reverse().join('-')) - new Date(bValue.split('/').reverse().join('-'));
                        case 'membres':
                            aValue = parseInt(a.cells[3].querySelector('.badge').textContent);
                            bValue = parseInt(b.cells[3].querySelector('.badge').textContent);
                            return bValue - aValue; // Descending order
                        default:
                            return 0;
                    }
                });
                
                // Reorder rows
                rows.forEach(row => tbody.appendChild(row));
            });
        }
        
        // Confirmation for delete buttons
        const deleteForms = document.querySelectorAll('form[onsubmit*="confirm"]');
        deleteForms.forEach(form => {
            const deleteButton = form.querySelector('button[type="submit"]');
            if (deleteButton) {
                deleteButton.addEventListener('click', function(e) {
                    if (!confirm('Êtes-vous sûr de vouloir supprimer définitivement ce groupe ? Cette action est irréversible.')) {
                        e.preventDefault();
                        return false;
                    }
                });
            }
        });
    });
    </script>
  </body>
</html>
{% endblock %}