{% extends 'base.html.twig' %}

{% block title %}ObjectifSante index{% endblock %}

{% block body %}
    <h1>ObjectifSante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>ValeurCible</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>Statut</th>
                <th>Priorite</th>
                <th>Progression</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for objectif_sante in objectif_santes %}
            <tr>
                <td>{{ objectif_sante.id }}</td>
                <td>{{ objectif_sante.type }}</td>
                <td>{{ objectif_sante.valeurCible }}</td>
                <td>{{ objectif_sante.dateDebut ? objectif_sante.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ objectif_sante.dateFin ? objectif_sante.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ objectif_sante.statut }}</td>
                <td>{{ objectif_sante.priorite }}</td>
                <td>{{ objectif_sante.progression }}</td>
                <td>{{ objectif_sante.titre }}</td>
                <td>
                    <a href="{{ path('app_objectif_sante_show', {'id': objectif_sante.id}) }}">show</a>
                    <a href="{{ path('app_objectif_sante_edit', {'id': objectif_sante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_objectif_sante_new') }}">Create new</a>
{% endblock %}
