    <script>
      // Confirmation text validation
      const confirmText = document.getElementById('confirmText');
      const deleteButton = document.getElementById('deleteButton');
      const confirmError = document.getElementById('confirmError');
      
      confirmText.addEventListener('input', function() {
        if (this.value.toUpperCase() === 'SUPPRIMER') {
          deleteButton.disabled = false;
          confirmError.style.display = 'none';
          this.classList.remove('is-invalid');
          this.classList.add('is-valid');
        } else {
          deleteButton.disabled = true;
          confirmError.style.display = 'block';
          this.classList.remove('is-valid');
          this.classList.add('is-invalid');
        }
      });
      
      // Countdown timer
      let seconds = 5;
      const countdownElement = document.getElementById('countdown');
      const secondsElement = document.getElementById('seconds');
      const countdownInterval = setInterval(() => {
        seconds--;
        countdownElement.textContent = seconds;
        secondsElement.textContent = seconds;
        
        if (seconds === 0) {
          clearInterval(countdownInterval);
          confirmText.value = 'SUPPRIMER';
          confirmText.dispatchEvent(new Event('input'));
          
          // Auto-delete after 1 more second
          setTimeout(() => {
            if (!deleteButton.disabled) {
              deleteButton.click();
            }
          }, 1000);
        }
      }, 1000);
      
      // Delete confirmation
      document.getElementById('deleteForm').addEventListener('submit', function(e) {
        if (confirmText.value.toUpperCase() !== 'SUPPRIMER') {
          e.preventDefault();
          alert('Vous devez taper "SUPPRIMER" pour confirmer la suppression.');
        } else {
          if (!confirm('DERNI√àRE CHANCE ! √ätes-vous VRAIMENT s√ªr de vouloir supprimer cet utilisateur ?')) {
            e.preventDefault();
          }
        }
      });
      
      // Prevent accidental navigation
      window.addEventListener('beforeunload', function(e) {
        if (!deleteButton.disabled) {
          e.preventDefault();
          e.returnValue = 'Vous avez des modifications non enregistr√©es. √ätes-vous s√ªr de vouloir quitter ?';
        }
      });
