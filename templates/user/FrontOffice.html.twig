{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="container">
    <h1>Welcome, {{ app.user.prenom }} {{ app.user.nom }}!</h1>
    <p>You are logged in as {{ app.user.email }}</p>
    <p>Your role: {{ app.user.roles|join(', ') }}</p>
    <a href="{{ path('app_logout') }}" class="btn btn-danger">Logout</a>
</div>
{% endblock %}