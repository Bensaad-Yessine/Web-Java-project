                                        if (titleDiv) titleDiv.style.fontWeight = 'normal';
                                        const badge = this.querySelector('span[style*="background: #dc2626"]');
                                        if (badge) badge.remove();
                                    }
                                });

                                list.appendChild(li);
                            });

                            document.getElementById('notif-count').textContent = unreadCount;
                        })
