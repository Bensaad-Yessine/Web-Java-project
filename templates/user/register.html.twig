            <i class="mdi mdi-school"></i>
          </div>
          <h1>ESPRIT École d'Ingénieurs</h1>
          <p>Inscription Nouvel Étudiant</p>
        </div>

        <!-- Registration Form -->
        <div class="card-body">
          <form method="POST" action="{{ path('app_user_add') }}">
            
            <!-- Name Fields -->
            <div class="form-row">
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Prénom <span class="required">*</span></label>
                  <div class="input-container">
                    <i class="mdi mdi-account input-icon"></i>
                    <input type="text" 
                           class="form-control" 
                           name="prenom" 
                           id="prenom"
                           placeholder="Votre prénom"
                           required>
                  </div>
                </div>
              </div>
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Nom <span class="required">*</span></label>
                  <div class="input-container">
                    <i class="mdi mdi-account-outline input-icon"></i>
                    <input type="text" 
                           class="form-control" 
                           name="nom" 
                           id="nom"
                           placeholder="Votre nom de famille"
                           required>
                  </div>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="form-group">
              <label class="form-label">Email ESPRIT <span class="required">*</span></label>
              <div class="input-container">
                <i class="mdi mdi-email input-icon"></i>
                <input type="email" 
                       class="form-control" 
                       name="email" 
                       id="email"
                       placeholder="prenom.nom@esprit.tn"
                       required>
              </div>
              <small class="help-text">Utilisez votre email ESPRIT officiel</small>
            </div>

            <!-- Birth Date & Gender -->
            <div class="form-row">
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Date de naissance <span class="required">*</span></label>
                  <div class="input-container">
                    <i class="mdi mdi-cake-variant input-icon"></i>
                    <input type="date" 
                           class="form-control" 
                           name="DateDeNaissance" 
                           id="dateNaissance"
                           required>
                  </div>
                </div>
              </div>
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Sexe <span class="required">*</span></label>
                  <div class="input-container">
                    <i class="mdi mdi-gender-male-female input-icon"></i>
                    <select class="form-control" name="sexe" id="sexe" required>
                      <option value="" disabled selected>Sélectionnez votre sexe</option>
                      <option value="Masculin">Masculin</option>
                      <option value="Féminin">Féminin</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <!-- Class & Speciality -->
            <div class="form-row">
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Classe</label>
                  <div class="input-container">
                    <i class="mdi mdi-book-open-page-variant input-icon"></i>
                    <select class="form-control" name="classe" id="classe">
                      <option value="" selected>Choisissez votre classe</option>
                      <option value="1A">1ère Année</option>
                      <option value="2A">2ème Année</option>
                      <option value="3A">3ème Année</option>
                      <option value="1B">1ère Année Prépa</option>
                      <option value="2B">2ème Année Prépa</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="form-col">
                <div class="form-group">
                  <label class="form-label">Spécialité</label>
                  <div class="input-container">
                    <i class="mdi mdi-laptop input-icon"></i>
                    <select class="form-control" name="specialiteFuture" id="specialite">
                      <option value="" selected>Choisissez une spécialité</option>
                      <option value="ARCTIC">ARCTIC</option>
                      <option value="NIDS">NIDS</option>
                      <option value="DS">Data Science</option>
                      <option value="DATA">Big Data</option>
                      <option value="BI">Business Intelligence</option>
                      <option value="CLOUD">Cloud Computing</option>
                      <option value="SE">Software Engineering</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>

            <!-- Password -->
            <div class="form-group">
              <label class="form-label">Mot de passe <span class="required">*</span></label>
              <div class="input-container">
                <i class="mdi mdi-lock input-icon"></i>
                <input type="password" 
                       class="form-control" 
                       name="password" 
                       id="password"
                       placeholder="Créez un mot de passe sécurisé"
                       required
                       minlength="6">
                <button type="button" class="password-toggle" onclick="togglePasswordVisibility()">
                  <i class="mdi mdi-eye"></i>
