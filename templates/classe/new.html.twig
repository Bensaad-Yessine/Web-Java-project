    <script>
      // Form validation and enhancement
      document.addEventListener('DOMContentLoaded', function() {
        // Auto-focus on first input
        const firstInput = document.querySelector('input[autofocus]');
        if (firstInput) {
          firstInput.focus();
        }
        
        // Real-time validation
        const formInputs = document.querySelectorAll('.form-control-custom');
        formInputs.forEach(input => {
          input.addEventListener('blur', function() {
            validateField(this);
          });
          
          input.addEventListener('input', function() {
            if (this.classList.contains('is-invalid')) {
              validateField(this);
            }
          });
        });
        
        function validateField(field) {
          field.classList.remove('is-valid', 'is-invalid');
          if (field.value.trim() === '') {
            field.classList.add('is-invalid');
          } else {
            field.classList.add('is-valid');
          }
        }
        
        // Confirm before cancel
        const cancelBtn = document.querySelector('a[href*="app_classe_index"]');
        if (cancelBtn) {
          cancelBtn.addEventListener('click', function(e) {
            const inputs = document.querySelectorAll('.form-control-custom');
            const hasValue = Array.from(inputs).some(input => input.value.trim() !== '');
            
            if (hasValue && !confirm('Les modifications non sauvegardées seront perdues. Continuer ?')) {
              e.preventDefault();
            }
          });
        }
        
        // Form submission feedback
        const form = document.querySelector('form');
        if (form) {
          form.addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.innerHTML = '<i class="mdi mdi-loading mdi-spin me-2"></i> Création en cours...';
              submitBtn.disabled = true;
            }
          });
        }
        
        // Simulate stats (replace with actual data if available)
        document.getElementById('totalClasses').textContent = '{{ classes_total is defined ? classes_total : "0" }}';
        document.getElementById('firstYear').textContent = Math.floor(Math.random() * 10) + 5;
        document.getElementById('secondYear').textContent = Math.floor(Math.random() * 8) + 3;
        document.getElementById('thirdYear').textContent = Math.floor(Math.random() * 6) + 2;
      });
