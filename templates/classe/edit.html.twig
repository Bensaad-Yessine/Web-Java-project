    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Auto-focus on first input
        const firstInput = document.querySelector('input[autofocus]');
        if (firstInput) {
          firstInput.focus();
        }
        
        // Real-time validation
        const formInputs = document.querySelectorAll('.form-control-custom');
        formInputs.forEach(input => {
          input.addEventListener('blur', function() {
            validateField(this);
          });
          
          input.addEventListener('input', function() {
            if (this.classList.contains('is-invalid')) {
              validateField(this);
            }
          });
        });
        
        function validateField(field) {
          field.classList.remove('is-valid', 'is-invalid');
          if (field.value.trim() === '') {
            field.classList.add('is-invalid');
          } else {
            field.classList.add('is-valid');
          }
        }
        
        // Form submission feedback
        const form = document.querySelector('form');
        if (form) {
          form.addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            if (submitBtn) {
              submitBtn.innerHTML = '<i class="mdi mdi-loading mdi-spin me-2"></i> Enregistrement...';
              submitBtn.disabled = true;
            }
          });
        }
        
        // Reset button confirmation
        const resetBtn = document.querySelector('button[type="reset"]');
        if (resetBtn) {
          resetBtn.addEventListener('click', function(e) {
            if (!confirm('Voulez-vous vraiment réinitialiser tous les champs du formulaire ?')) {
              e.preventDefault();
            }
          });
        }
        
        // Cancel button confirmation if there are changes
        const cancelBtn = document.querySelector('a[href*="app_classe_index"]');
        if (cancelBtn) {
          cancelBtn.addEventListener('click', function(e) {
            const inputs = document.querySelectorAll('.form-control-custom');
            let hasChanges = false;
            
            inputs.forEach(input => {
              const originalValue = input.defaultValue;
              const currentValue = input.value;
              if (originalValue !== currentValue) {
                hasChanges = true;
              }
            });
            
            if (hasChanges && !confirm('Vous avez des modifications non sauvegardées. Quitter sans enregistrer ?')) {
              e.preventDefault();
            }
          });
        }
        
        // Delete button extra confirmation
        const deleteForm = document.querySelector('form[action*="delete"]');
        if (deleteForm) {
          const deleteBtn = deleteForm.querySelector('button[type="submit"]');
          if (deleteBtn) {
            deleteBtn.addEventListener('click', function(e) {
              const confirmation = confirm('⚠️ ATTENTION ⚠️\n\nLa suppression est définitive !\n\n• Tous les étudiants de cette classe seront affectés\n• Toutes les séances seront supprimées\n• Toutes les données seront perdues\n\nConfirmer la suppression ?');
              
              if (!confirmation) {
                e.preventDefault();
              }
            });
          }
        }
      });
    </script>
  </body>
