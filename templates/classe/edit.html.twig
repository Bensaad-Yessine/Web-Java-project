    <!-- Layout styles -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}" />
    <style>
      .form-card {
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.08);
        border: none;
        margin-bottom: 30px;
      }
      
      .form-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 26px;
        color: white;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        margin-bottom: 20px;
      }
      
      .form-section-title {
        color: #2c3e50;
        font-weight: 600;
        padding-bottom: 10px;
        margin-bottom: 25px;
        border-bottom: 2px solid #f0f0f0;
      }
      
      .form-group-custom {
        margin-bottom: 25px;
      }
      
      .form-label-custom {
        font-weight: 600;
        color: #34495e;
        margin-bottom: 8px;
        font-size: 0.95rem;
      }
      
      .form-control-custom {
        border: 2px solid #e8e8e8;
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
      }
      
      .form-control-custom:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
      }
      
      .form-helper {
        font-size: 0.85rem;
        color: #7f8c8d;
        margin-top: 5px;
      }
      
      .btn-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
      }
      
      .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        color: white;
      }
      
      .current-data-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 12px;
        color: white;
        padding: 25px;
        margin-bottom: 25px;
      }
      
      .current-data-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
      }
      
      .current-data-item {
        margin-bottom: 10px;
        padding-left: 25px;
        position: relative;
      }
      
      .current-data-label {
        font-weight: 600;
        color: rgba(255,255,255,0.9);
        min-width: 180px;
        display: inline-block;
      }
      
      .current-data-value {
        color: white;
        font-weight: 500;
      }
      
      .current-data-item:before {
        content: "•";
        position: absolute;
        left: 10px;
        color: white;
        font-size: 1.2rem;
      }
      
      .input-group-custom .input-group-text {
        background: #f8f9fa;
        border: 2px solid #e8e8e8;
        border-right: none;
        border-radius: 8px 0 0 8px;
      }
      
      .input-group-custom .form-control {
        border-left: none;
        border-radius: 0 8px 8px 0;
      }
      
      .validation-error {
        color: #e74c3c;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
      }
      
      .breadcrumb-custom {
        background: transparent;
        padding: 0;
      }
      
      .breadcrumb-custom .breadcrumb-item a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
      }
      
      .breadcrumb-custom .breadcrumb-item.active {
        color: #7f8c8d;
        font-weight: 500;
      }
      
      .action-buttons .btn {
        padding: 10px 20px;
        font-weight: 500;
      }
      
      .btn-outline-custom {
        border: 2px solid #667eea;
        color: #667eea;
        background: transparent;
      }
      
      .btn-outline-custom:hover {
        background: #667eea;
        color: white;
      }
      
      .info-box {
        background: #e3f2fd;
        border-left: 4px solid #2196f3;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
      }
      
      .info-box i {
        color: #2196f3;
      }
      
      .warning-box {
        background: #fff3e0;
        border-left: 4px solid #ff9800;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
      }
      
      .warning-box i {
        color: #ff9800;
      }
      
      .class-badge {
        display: inline-flex;
        align-items: center;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        margin-right: 5px;
      }
      
      .badge-niveau {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
      }
      
      .badge-annee {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
      }
    </style>
  </head>
  <body>
