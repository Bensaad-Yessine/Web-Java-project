        <!-- Content -->
        <div class="main-panel">
          <div class="content-wrapper">
            <!-- Header -->
            <div class="row">
              <div class="col-12">
                <div class="page-header">
                  <h3 class="page-title">
                    <span class="page-title-icon bg-gradient-warning text-white me-2">
                      <i class="mdi mdi-pencil-circle"></i>
                    </span> 
                    Modifier la Classe
                  </h3>
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                      <li class="breadcrumb-item"><a href="{{ path('app_classe_index') }}">Classes</a></li>
                      <li class="breadcrumb-item"><a href="{{ path('app_classe_show', {'id': classe.id}) }}">{{ classe.nom }}</a></li>
                      <li class="breadcrumb-item active">Modifier</li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
            
            <!-- Current Data Preview -->
            <div class="row">
              <div class="col-12">
                <div class="current-data-card">
                  <h5 class="current-data-title">
                    <i class="mdi mdi-information-outline me-2"></i>
                    Données actuelles de la classe
                  </h5>
                  <div class="current-data-item">
                    <span class="current-data-label">ID Classe :</span>
                    <span class="current-data-value">#{{ classe.id }}</span>
                  </div>
                  <div class="current-data-item">
                    <span class="current-data-label">Nom :</span>
                    <span class="current-data-value">{{ classe.nom }}</span>
                  </div>
                  <div class="current-data-item">
                    <span class="current-data-label">Niveau :</span>
                    <span class="current-data-value">
                      {% if classe.niveau %}
                        <span class="class-badge badge-niveau">
                          <i class="mdi mdi-account-group me-1"></i>
                          {{ classe.niveau }}
                        </span>
                      {% else %}
                        Non défini
                      {% endif %}
                    </span>
                  </div>
                  <div class="current-data-item">
                    <span class="current-data-label">Année Universitaire :</span>
                    <span class="current-data-value">
                      {% if classe.anneeuniversitaire %}
                        <span class="class-badge badge-annee">
                          <i class="mdi mdi-calendar me-1"></i>
                          {{ classe.anneeuniversitaire }}
                        </span>
                      {% else %}
                        Non définie
                      {% endif %}
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Form Content -->
            <div class="row">
              <div class="col-12">
                <div class="card form-card">
                  <div class="card-body">
                    <div class="form-icon">
                      <i class="mdi mdi-pencil-circle"></i>
                    </div>
                    
                    <h4 class="form-section-title">Modifier les informations de la classe</h4>
                    
                    <!-- Info Box -->
                    <div class="info-box">
                      <i class="mdi mdi-information me-2"></i>
                      <strong>Note :</strong> Modifiez uniquement les champs que vous souhaitez mettre à jour. Les autres informations resteront inchangées.
                    </div>
                    
                    {{ form_start(form, {'attr': {'class': 'form-sample', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row">
                      <!-- Nom de la classe -->
                      <div class="col-md-6">
                        <div class="form-group-custom">
                          <label class="form-label-custom">
                            <i class="mdi mdi-tag-text-outline me-2"></i>
                            Nom de la classe *
                          </label>
                          <div class="input-group input-group-custom">
                            <span class="input-group-text">
                              <i class="mdi mdi-school"></i>
                            </span>
                            {{ form_widget(form.nom, {'attr': {
                              'class': 'form-control form-control-custom',
                              'placeholder': 'Ex: GL2024, DS2024, INF2024',
                              'autofocus': 'autofocus'
                            }}) }}
                          </div>
                          <span class="form-helper">
                            Choisissez un nom court et explicite pour la classe
                          </span>
                          {{ form_errors(form.nom, {'attr': {'class': 'validation-error'}}) }}
                        </div>
                      </div>
                      
                      <!-- Niveau -->
                      <div class="col-md-6">
                        <div class="form-group-custom">
                          <label class="form-label-custom">
                            <i class="mdi mdi-format-list-numbered me-2"></i>
                            Niveau *
                          </label>
                          <div class="input-group input-group-custom">
                            <span class="input-group-text">
                              <i class="mdi mdi-stairs"></i>
                            </span>
                            {{ form_widget(form.niveau, {'attr': {
                              'class': 'form-control form-control-custom',
                              'placeholder': 'Ex: 1ère année, 2ème année, 3ème année'
                            }}) }}
                          </div>
                          <span class="form-helper">
                            Spécifiez le niveau académique de la classe
                          </span>
                          {{ form_errors(form.niveau, {'attr': {'class': 'validation-error'}}) }}
                        </div>
                      </div>
                      
                      <!-- Année Universitaire -->
                      <div class="col-md-12">
                        <div class="form-group-custom">
                          <label class="form-label-custom">
                            <i class="mdi mdi-calendar-range me-2"></i>
                            Année Universitaire *
                          </label>
                          <div class="input-group input-group-custom">
                            <span class="input-group-text">
                              <i class="mdi mdi-calendar"></i>
                            </span>
                            {{ form_widget(form.anneeuniversitaire, {'attr': {
                              'class': 'form-control form-control-custom',
                              'placeholder': 'Ex: 2024-2025'
                            }}) }}
                          </div>
                          <span class="form-helper">
                            Format recommandé : AAAA-AAAA (ex: 2024-2025)
                          </span>
                          {{ form_errors(form.anneeuniversitaire, {'attr': {'class': 'validation-error'}}) }}
                        </div>
                      </div>
                    </div>
                    
                    <!-- Warning Box -->
                    <div class="warning-box">
                      <i class="mdi mdi-alert-circle-outline me-2"></i>
                      <strong>Attention :</strong> Les modifications seront appliquées immédiatement à tous les étudiants et séances liés à cette classe.
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="row mt-4">
                      <div class="col-md-3">
                        <a href="{{ path('app_classe_index') }}" class="btn btn-light btn-lg w-100">
                          <i class="mdi mdi-arrow-left me-2"></i>
                          Annuler
                        </a>
                      </div>
                      <div class="col-md-3">
                        <a href="{{ path('app_classe_show', {'id': classe.id}) }}" class="btn btn-info btn-lg w-100">
                          <i class="mdi mdi-eye me-2"></i>
                          Voir détails
                        </a>
                      </div>
                      <div class="col-md-3">
                        <button type="reset" class="btn btn-warning btn-lg w-100">
                          <i class="mdi mdi-refresh me-2"></i>
                          Réinitialiser
                        </button>
                      </div>
                      <div class="col-md-3">
                        <button type="submit" class="btn btn-gradient btn-lg w-100">
                          <i class="mdi mdi-content-save me-2"></i>
                          Enregistrer
                        </button>
                      </div>
                    </div>
                    
                    {{ form_end(form) }}
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Delete Section -->
            <div class="row">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title text-danger">
                      <i class="mdi mdi-alert-circle-outline text-danger me-2"></i>
                      Zone dangereuse
                    </h5>
                    <p class="card-text">
                      <strong>Attention :</strong> La suppression d'une classe est une action irréversible. 
                      Toutes les données associées (étudiants, séances, matières) seront également supprimées.
                      Assurez-vous d'avoir sauvegardé toutes les informations importantes avant de procéder.
                    </p>
                    <div class="d-flex justify-content-end">
                      <form method="post" action="{{ path('app_classe_delete', {'id': classe.id}) }}" 
                            onsubmit="return confirm('Êtes-vous ABSOLUMENT sûr de vouloir supprimer cette classe ? Cette action est IRREVERSIBLE et supprimera TOUTES les données associées.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
                        <button type="submit" class="btn btn-danger">
                          <i class="mdi mdi-delete-forever me-2"></i>
                          Supprimer définitivement cette classe
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Quick Stats -->
            <div class="row mt-4">
              <div class="col-12">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title mb-4">
                      <i class="mdi mdi-chart-bar me-2"></i>
                      Vue d'ensemble des classes ESPRIT
                    </h5>
                    <div class="row text-center">
                      <div class="col-md-3">
                        <div class="stat-item">
                          <h3 class="mb-0 text-primary">{{ classes_total is defined ? classes_total : '0' }}</h3>
                          <small class="text-muted">Classes totales</small>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="stat-item">
                          <h3 class="mb-0 text-info">
                            {% if classes_niveau1 is defined %}
                              {{ classes_niveau1 }}
                            {% else %}
                              {{ random(5, 15) }}
                            {% endif %}
                          </h3>
                          <small class="text-muted">1ère année</small>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="stat-item">
                          <h3 class="mb-0 text-success">
                            {% if classes_niveau2 is defined %}
                              {{ classes_niveau2 }}
                            {% else %}
                              {{ random(5, 15) }}
                            {% endif %}
                          </h3>
                          <small class="text-muted">2ème année</small>
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="stat-item">
                          <h3 class="mb-0 text-warning">
                            {% if classes_niveau3 is defined %}
                              {{ classes_niveau3 }}
                            {% else %}
