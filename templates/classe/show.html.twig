<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Simuler des données statistiques
        document.getElementById('studentCount').textContent = Math.floor(Math.random() * 50) + 20;
        document.getElementById('subjectCount').textContent = Math.floor(Math.random() * 10) + 5;
        document.getElementById('sessionCount').textContent = Math.floor(Math.random() * 15) + 5;
        document.getElementById('taskCount').textContent = Math.floor(Math.random() * 8) + 2;
        
        // Bouton d'export
        document.getElementById('exportBtn').addEventListener('click', function() {
            alert('Export des détails de la classe ' + '{{ classe.nom }}' + ' en cours...');
        });
        
        // Bouton de partage
        document.getElementById('shareBtn').addEventListener('click', function() {
            const shareUrl = window.location.href;
            if (navigator.share) {
                navigator.share({
                    title: 'Classe {{ classe.nom }} - ESPRIT',
                    text: 'Détails de la classe {{ classe.nom }}',
                    url: shareUrl,
                });
            } else {
                // Fallback pour les navigateurs qui ne supportent pas l'API Share
                navigator.clipboard.writeText(shareUrl).then(() => {
                    alert('Lien copié dans le presse-papier !');
                });
            }
        });
        
        // Animation des cartes statistiques
        const statCards = document.querySelectorAll('.info-card');
        statCards.forEach((card, index) => {
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });
        
        // Mode impression
        const style = document.createElement('style');
        style.innerHTML = `
            @media print {
                .sidebar, .navbar, .action-buttons, .btn, .footer, .card-footer {
                    display: none !important;
                }
                .card {
                    border: 1px solid #000 !important;
                    box-shadow: none !important;
                }
                body {
                    background: white !important;
                    color: black !important;
                }
                .header-gradient {
                    background: #667eea !important;
                    -webkit-print-color-adjust: exact;
                }
            }
        `;
        document.head.appendChild(style);
        
        // Mettre à jour l'heure de consultation
        function updateLastViewed() {
            const lastViewedEl = document.querySelector('.timeline-item:nth-child(2) p');
            if (lastViewedEl) {
                const now = new Date();
                lastViewedEl.textContent = 'Aujourd\'hui, ' + now.toLocaleTimeString('fr-FR', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
            }
        }
        
        // Mettre à jour toutes les minutes
        setInterval(updateLastViewed, 60000);
    });
</script>
