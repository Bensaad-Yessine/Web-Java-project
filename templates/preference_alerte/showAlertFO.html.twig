                                    <span class="channel-badge {{ preference.emailActif ? 'active' : 'inactive' }}">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                            <polyline points="22,6 12,13 2,6"/>
                                        </svg>
                                        Email
                                    </span>
                                    <span class="channel-badge {{ preference.pushActif ? 'active' : 'inactive' }}">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="5" y="2" width="14" height="20" rx="2" ry="2"/>
                                            <path d="M12 18h.01"/>
                                        </svg>
                                        Push
                                    </span>
                                    <span class="channel-badge {{ preference.siteNotifActive ? 'active' : 'inactive' }}">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"/>
                                            <line x1="2" y1="12" x2="22" y2="12"/>
                                            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
                                        </svg>
                                        Site Web
                                    </span>
                                </div>

                                {% if preference.heureSilenceDebut and preference.heureSilenceFin %}
                                    <div class="silence-period">
                                        <div class="silence-title">
                                            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                                            </svg>
                                            P√©riode de silence
                                        </div>
                                        <div class="silence-times">
                                            <span class="silence-time">{{ preference.heureSilenceDebut|date('H:i') }}</span>
                                            ‚Üí
                                            <span class="silence-time">{{ preference.heureSilenceFin|date('H:i') }}</span>
                                        </div>
                                    </div>
                                {% endif %}

                                <div class="card-actions">
                                    <a href="{{ path('front_preference_alerte_detail', {'userId': userId,'preferenceId': preference.id}) }}" class="btn btn-view">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                            <circle cx="12" cy="12" r="3"/>
                                        </svg>
                                        Voir
                                    </a>
                                    <a href="{{ path('front_preference_alerte_edit', {'id': preference.id}) }}" class="btn btn-edit">
                                        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                        </svg>
                                        Modifier
                                    </a>
                                    {% if not preference.isDefault %}
                                        <form method="post" action="{{ path('app_preference_alerte_delete', {'id': preference.id}) }}" 
                                              onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette pr√©f√©rence ?');"
                                              style="display: contents;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ preference.id) }}">
                                            <button type="submit" class="btn btn-delete">
                                                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <path d="M3 6h18"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/>
                                                    <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                                </svg>
                                                Supprimer
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {% for message in app.flashes('info') %}
                <script>
                    setTimeout(() => {
                        alert("{{ message }}");
                    }, 100);
                </script>
            {% endfor %}
        </main>
    </div>

    <script>
        // Add hover animations
        document.querySelectorAll('.preference-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-4px)';
                card.style.boxShadow = '0 20px 40px rgba(0, 0, 0, 0.15)';
            });
            
            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0)';
                card.style.boxShadow = '0 12px 32px rgba(0, 0, 0, 0.12)';
            });
        });
    </script>
</body>
</html>