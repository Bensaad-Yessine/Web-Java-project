<script>
document.addEventListener('DOMContentLoaded', function() {
    // Wizard progress animation
    const progressSteps = document.querySelectorAll('.progress-step');
    const sections = document.querySelectorAll('.form-section');
    
    function updateProgress() {
        let activeIndex = 0;
        
        // Find which section is in view
        sections.forEach((section, index) => {
            const rect = section.getBoundingClientRect();
            if (rect.top <= window.innerHeight / 2 && rect.bottom >= window.innerHeight / 2) {
                activeIndex = index;
            }
        });
        
        // Update progress steps
        progressSteps.forEach((step, index) => {
            step.classList.remove('active', 'completed');
            if (index < activeIndex) {
                step.classList.add('completed');
            } else if (index === activeIndex) {
                step.classList.add('active');
            }
        });
    }
    
    // Checkbox card selection
    const checkboxCards = document.querySelectorAll('.checkbox-card');
    checkboxCards.forEach(card => {
        const checkbox = card.querySelector('input[type="checkbox"]');
        
        card.addEventListener('click', () => {
            checkbox.checked = !checkbox.checked;
            card.classList.toggle('selected', checkbox.checked);
        });
        
        // Initialize selected state
        card.classList.toggle('selected', checkbox.checked);
    });
    
    // Recommended settings selection
    const settingOptions = document.querySelectorAll('.setting-option');
    settingOptions.forEach(option => {
        option.addEventListener('click', () => {
            // Remove selection from all options
            settingOptions.forEach(opt => opt.classList.remove('selected'));
            
            // Select this option
            option.classList.add('selected');
            
            // Apply recommended settings
            const delayInput = document.querySelector('#{{ form.delaiRappelMin.vars.id }}');
            const startTimeInput = document.querySelector('#{{ form.heureSilenceDebut.vars.id }}');
            const endTimeInput = document.querySelector('#{{ form.heureSilenceFin.vars.id }}');
            
            if (option.dataset.delai) {
                delayInput.value = option.dataset.delai;
            }
            
            if (option.dataset.start && option.dataset.end) {
                startTimeInput.value = option.dataset.start;
                endTimeInput.value = option.dataset.end;
            } else {
                // Clear time inputs if no silence period
                startTimeInput.value = '';
                endTimeInput.value = '';
            }
        });
    });
    
    // Scroll-based progress update
    window.addEventListener('scroll', updateProgress);
    updateProgress(); // Initial update
    
    // Smooth scroll to sections when clicking labels
    document.querySelectorAll('label').forEach(label => {
        label.addEventListener('click', function() {
            const input = this.querySelector('input');
            if (input && input.type === 'checkbox') {
                setTimeout(() => {
                    const nextSection = this.closest('.form-section').nextElementSibling;
                    if (nextSection) {
                        nextSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                }, 100);
            }
        });
    });
    
    // Add animation to form sections on scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);
    
    sections.forEach(section => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
        observer.observe(section);
    });
    
    // Initialize with first recommended setting
    setTimeout(() => {
        const firstOption = document.querySelector('.setting-option');
        if (firstOption) {
            firstOption.click();
        }
    }, 500);
});
</script>

