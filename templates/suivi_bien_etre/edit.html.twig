<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Corona Admin - Modifier Suivi</title>

  <!-- plugins:css -->
  <link rel="stylesheet" href="{{ asset('assets/vendors/mdi/css/materialdesignicons.min.css') }}">
  <link rel="stylesheet" href="{{ asset('assets/vendors/ti-icons/css/themify-icons.css') }}">
  <link rel="stylesheet" href="{{ asset('assets/vendors/css/vendor.bundle.base.css') }}">
  <link rel="stylesheet" href="{{ asset('assets/vendors/font-awesome/css/font-awesome.min.css') }}">

  <!-- Layout styles -->
  <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
  <link rel="shortcut icon" href="{{ asset('assets/images/favicon.png') }}" />
</head>

<body>
<div class="container-scroller">

  <!-- SIDEBAR -->
  <nav class="sidebar sidebar-offcanvas" id="sidebar">
    <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
      <a class="sidebar-brand brand-logo" href="#"><img src="{{ asset('assets/images/logo.svg') }}" alt="logo" /></a>
      <a class="sidebar-brand brand-logo-mini" href="#"><img src="{{ asset('assets/images/logo-mini.svg') }}" alt="logo" /></a>
    </div>

    <ul class="nav">
      <li class="nav-item nav-category"><span class="nav-link">Navigation</span></li>

      <li class="nav-item menu-items">
        <a class="nav-link" href="{{ path('app_objectif_index') }}">
          <span class="menu-icon"><i class="mdi mdi-target"></i></span>
          <span class="menu-title">Objectifs</span>
        </a>
      </li>

      <li class="nav-item menu-items active">
        <a class="nav-link" href="{{ path('app_suivi_bien_etre_index') }}">
          <span class="menu-icon"><i class="mdi mdi-heart-pulse"></i></span>
          <span class="menu-title">Suivis</span>
        </a>
      </li>
    </ul>
  </nav>

  <!-- PAGE -->
  <div class="container-fluid page-body-wrapper">

    <!-- NAVBAR TOP -->
    <nav class="navbar p-0 fixed-top d-flex flex-row">
      <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
          <span class="mdi mdi-menu"></span>
        </button>
      </div>
    </nav>

    <div class="main-panel">
      <div class="content-wrapper">

        <div class="row">
          <div class="col-12 grid-margin">
            <div class="card">
              <div class="card-body">

                <div class="d-flex justify-content-between align-items-center mb-4">
                  <h4 class="card-title">✏️ Modifier un suivi bien-être</h4>

                  <a href="{{ path('app_suivi_bien_etre_index') }}" class="btn btn-secondary btn-icon-text">
                    <i class="mdi mdi-arrow-left"></i> Retour
                  </a>
                </div>

                {# Flash messages #}
                {% for label, messages in app.flashes %}
                  {% for msg in messages %}
                    <div class="alert alert-{{ label }} mb-3">{{ msg }}</div>
                  {% endfor %}
                {% endfor %}

                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">

                  <div class="col-md-6 mb-3">
                    {{ form_label(form.dateSaisie) }}
                    {{ form_widget(form.dateSaisie, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.dateSaisie) }}</div>
                  </div>

                  <div class="col-md-6 mb-3">
                    {{ form_label(form.humeur) }}
                    {{ form_widget(form.humeur, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.humeur) }}</div>
                  </div>

                  <div class="col-md-4 mb-3">
                    {{ form_label(form.qualiteSommeil) }}
                    {{ form_widget(form.qualiteSommeil, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.qualiteSommeil) }}</div>
                  </div>

                  <div class="col-md-4 mb-3">
                    {{ form_label(form.niveauEnergie) }}
                    {{ form_widget(form.niveauEnergie, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.niveauEnergie) }}</div>
                  </div>

                  <div class="col-md-4 mb-3">
                    {{ form_label(form.niveauStress) }}
                    {{ form_widget(form.niveauStress, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.niveauStress) }}</div>
                  </div>

                  <div class="col-md-6 mb-3">
                    {{ form_label(form.qualiteAlimentation) }}
                    {{ form_widget(form.qualiteAlimentation, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger small">{{ form_errors(form.qualiteAlimentation) }}</div>
                  </div>

                  {# si ton form contient notesLibres #}
                  {% if form.notesLibres is defined %}
                    <div class="col-md-6 mb-3">
                      {{ form_label(form.notesLibres) }}
                      {{ form_widget(form.notesLibres, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                      <div class="text-danger small">{{ form_errors(form.notesLibres) }}</div>
                    </div>
                  {% endif %}

                  {# si ton form contient objectif #}
                  {% if form.objectif is defined %}
                    <div class="col-md-12 mb-3">
                      {{ form_label(form.objectif) }}
                      {{ form_widget(form.objectif, {'attr': {'class': 'form-control'}}) }}
                      <div class="text-danger small">{{ form_errors(form.objectif) }}</div>
                    </div>
                  {% endif %}

                </div>

                <div class="mt-4 d-flex gap-2">
                  <button type="submit" class="btn btn-success btn-icon-text">
                    <i class="mdi mdi-content-save btn-icon-prepend"></i>
                    Enregistrer
                  </button>

                  <a href="{{ path('app_suivi_bien_etre_index') }}" class="btn btn-light btn-icon-text">
                    <i class="mdi mdi-close btn-icon-prepend"></i>
                    Annuler
                  </a>
                </div>

                {{ form_end(form) }}

              </div>
            </div>
          </div>
        </div>

      </div>

      <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
          <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024</span>
        </div>
      </footer>
    </div>
  </div>
</div>

<!-- plugins:js -->
<script src="{{ asset('assets/vendors/js/vendor.bundle.base.js') }}"></script>
<script src="{{ asset('assets/js/off-canvas.js') }}"></script>
<script src="{{ asset('assets/js/misc.js') }}"></script>
</body>
</html>
