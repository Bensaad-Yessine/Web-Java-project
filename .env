# =============================
# Symfony Environment Variables
# =============================

# L'environnement de l'application (dev, prod, test)
APP_ENV=dev

# Clé secrète pour Symfony (sessions, CSRF, sécurité)
APP_SECRET=V3ryS3cur3R4nd0mStr1ngForSymfony123456

# Activer le debug (true/false)
APP_DEBUG=1

# =============================
# Framework Bundle
# =============================
###> symfony/framework-bundle ###
# Variables spécifiques au framework Symfony
###< symfony/framework-bundle ###

# =============================
# Doctrine / Database
# =============================
###> doctrine/doctrine-bundle ###
# Connexion à la base de données MySQL
DATABASE_URL="mysql://root:@127.0.0.1:3306/pidev?serverVersion=8.0.32&charset=utf8mb4"
# Exemple pour MariaDB : DATABASE_URL="mysql://root:@127.0.0.1:3306/pidev?serverVersion=10.11.2-MariaDB&charset=utf8mb4"
# Exemple pour PostgreSQL : DATABASE_URL="postgresql://user:password@127.0.0.1:5432/pidev?serverVersion=16&charset=utf8"
###< doctrine/doctrine-bundle ###

# =============================
# Messenger (Queues / Async)
# =============================
###> symfony/messenger ###
# Transport par défaut : Doctrine
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0
###< symfony/messenger ###

# =============================
# Mailer (Emails)
# =============================
###> symfony/mailer ###
# Pour le moment null, à configurer selon ton serveur SMTP
MAILER_DSN=null://null
###< symfony/mailer ###

# =============================
# Autres variables utiles
# =============================

# Langue par défaut
APP_LOCALE=fr
